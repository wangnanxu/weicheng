/* Empty. Add your own CSS if you like */

.forntpage {
	background: url(../img/loginbg.jpg);
	background-size: cover;
	background-repeat: no-repeat;
}
.btnlogin {
	position: fixed;
	left: 5%;
	bottom: 5%;
	padding-left: 15%;
	padding-right: 15%;
}
.btnregist {
	position: fixed;
	right: 5%;
	bottom: 5%;
	padding-left: 15%;
	padding-right: 15%;
}
.btnlanguage {
	position: fixed;
	right: 5%;
	top: 5%;
	background: #000000;
	color: #F1F2F3;
	border: solid 1px #FFFFFF;
}
.loginprogram {
	margin-top: 20px;
	text-align: center;
}
.loginprogram a {
	text-decoration: none;
}
.btnlogin-w {
	display: block;
	text-align: center;
	margin-top: 20px;
}
.btnlogin-w button {
	width: 100%;
}
.item-input-login {
	border: none;
	margin: 0;
	border-bottom: solid 1px #CCCCCC;
}
.item-input-focus {
	border-bottom: solid 1px #28A54C;
}
.directHead {
	width: 100%;
	display: block;
	text-align: center;
	height: 30%;
	margin-top: 5%;
}
.directHead img {
	display: block;
	margin: 0 auto;
	padding: 20px;
	width: 30%;
}
.directHead label {
	display: block;
	margin: 0 auto;
}